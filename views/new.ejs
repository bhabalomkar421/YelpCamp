<%- include("partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new Campground</h1>
        <div style="width: 30%; margin:25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Enter name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Enter image URL" required>
                </div>
                <div class="form-group">
                    <button  class="btn btn-primary btn-lg" style="float: right;" type="submit">Submit </button>
                </div>
                <a href="/campgrounds">Go Back</a>
            </form>
        </div>
        </div>
    </div>

