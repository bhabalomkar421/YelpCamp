<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add a new comment to <%= campground.name %> </h1>
        <div style="width: 30%; margin:25px auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text" required>
                </div>
                <div class="form-group">
                    <button  class="btn btn-primary btn-lg" style="float: right;" type="submit">Submit </button>
                </div>
                <a href="/campgrounds">Go Back</a>
            </form>
        </div>
        </div>
    </div>

<%- include("../partials/footer") %>

